// user needed
enum  type {
  User
  Organization
}
model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  type         type @default(User)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Organizations {
  id          Int       @id @default(autoincrement())
  name        String
  username    String
  password    String
  email       String    @unique
  address     String
  Isdeleted   recycle   @default(Nothidde)
  status      ComStatus @default(unpaid)
  phone       String
  description String
  type         type @default(Organization)
  tools       Tools[]
  orders      Orders[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// model Service {
