generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ToolStatus {
  AVAILABLE
  UNAVAILABLE
}

enum ComStatus {
  paid
  unpaid
}


enum recycle {
   hidden
   Nothidde
}

