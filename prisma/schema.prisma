generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ToolStatus {
  AVAILABLE
  UNAVAILABLE
  MAINTENANCE
}

enum ComStatus {
  paid
  unpaid
}

enum VisibilityStatus {
  VISIBLE
  HIDDEN
}

